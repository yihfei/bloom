generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model CoffeeBean {
    id               Int      @id @default(autoincrement())
    name             String
    quantity         Float
    roastLevel       String
    origin           String
    variety          String
    processingMethod String
    flavourNotes     String[] // or String[] if you want array later
    roastDate        DateTime
    purchasedFrom    String
    price            Float
    brews            Brew[]
}

model Grinder {
    id    Int    @id @default(autoincrement())
    name  String
    price Float
    brews Brew[]
}

model Brew {
    id           Int        @id @default(autoincrement())
    coffeeBean   CoffeeBean @relation(fields: [coffeeBeanId], references: [id])
    coffeeBeanId Int
    coffeeAmount Float
    waterAmount  Float
    grinder      Grinder?   @relation(fields: [grinderId], references: [id])
    grinderId    Int?
    grindSetting String
    brewMethod   String
    brewTime     Int
    notes        String?
    createdAt    DateTime   @default(now())
    updatedAt    DateTime   @updatedAt
}
